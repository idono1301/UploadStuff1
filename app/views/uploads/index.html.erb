 <table class="bordered-tables zebra-striped">
   <thead>
   <tr>
      <th>File Name</th>
      <th>Size</th>
      <th>Type</th>
      <th>Actions</th>
      <th> Test</th>
      <th> Content Type</th>
    </tr>
<% @uploads.each do |up| %>
	</thead>
	  <tbody>
	      <td><%= up.uploaded_file_name =%></td>
		<td><%= up.uploaded_file_size =%></td>
		<td><%= up.uploaded_content_type %></td>
		<td>
		  <%= link_to 'Remove', upload_path(up), :method => :delete, :confirm => "Are You Sure?" %>| <%= link_to 'Download', download_path(up) %></td>
<td><%= url_for(up) =%></td>
<td><%= up.uploaded.path =%></td>

</tr>
<% end %>
</table>

<% end %>

