 <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>
<%= csrf_meta_tags %>
</head>


<h1>All Users</h1>
<% @users.each do |user| %>
	<li>
		<%= link_to user.email, user %>
		<% if current_user.admin? %>
		| <%= link_to "Delete",user, :confirm => "Are you sure?", :method => :delete %> 
 
	<% end %>
	</li>
<% end %>
